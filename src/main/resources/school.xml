<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	<bean id="dateFormater" class="java.text.SimpleDateFormat">
        <constructor-arg value="dd-MM-yyyy" />
    </bean>
	
	<bean id = "school" class = "spring1.school">
		<property name = "CompanyName" value = "SchoolABC" />
		<property name="CompanyCreationDate">
            <bean factory-bean="dateFormater" factory-method="parse">
                <constructor-arg value="23-03-1982" />
            </bean>
		</property>
		<property name = "NumberOfEmployee" value = "10" />
	</bean>
	
</beans>